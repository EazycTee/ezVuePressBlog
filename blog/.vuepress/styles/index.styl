#app .header-wrapper .title a, #app #mobile-header a {  
  display: flex;
  align-items: center;
}
#app .header-wrapper .title a>img, #app #mobile-header a>img {
  display: block;
  width: 30px;
  height: 30px;
  width: 2rem;
  height: 2rem;
  margin: 0 .8rem 0 0;
}
#app .header-wrapper .title a>span, #app #mobile-header a>span {
  display: block;
}
// header avatar end.

#app .ui-post-title {
  font-family: PT Serif, Serif; 
}
#app .ui-post-summary, #app .ui-post-author {
  display none;
}
#app .ui-post-title {
  font-size: 1.5rem;
}
#app .ui-post footer {
  margin-top: .5rem;
}
#app .vuepress-blog-theme-content {
  padding: 2.5rem;
}
@media (max-width: $MQMobile) {
  #app .vuepress-blog-theme-content {
    padding: 0.65rem;
  }
  #app .ui-post-title {
    font-size: 1.2rem;
  }
  #app .ui-post {
    padding-bottom: 1rem;
    margin-bottom: 1rem;
  }
  #app .footer .footer-right-wrap .copyright .copyright-item {
    line-height: 1.5;
    border-right: none;
    text-align: center;
  }
}