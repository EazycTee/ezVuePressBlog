#app h1 {
  font-size: 1.85rem;
}
#app #header {
  width 100%;
  height: auto;
  padding: .5rem 1rem;
  font-size: 1rem;
}
#app .mobile-header-bar {
  width 100%;
}
#app #mobile-header .mobile-header-title {
  padding: .8rem 1rem;
}
#app .header-wrapper a, #app .header-wrapper p, #app .header-wrapper div {
  font-size: inherit;
}

